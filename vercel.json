  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["gru1"],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=2048"
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=2048"
    }
  }
}
